<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h1><a href="/<%= post.period %>/<%= post.slug %>"><%= post.title %></a></h1>
    <p class="post-info">Escrito el: <%= post.created_at.to_s %>, Autor: <%= post.author %></p>
    <div class="blog-body"><p><%= post.abstract %></p></div>
  <% end %>
<% else %>
  <p align="center">No se nos ocurrio nada para escribir todavia pero ya vamos a tener algo</p>
<% end %>